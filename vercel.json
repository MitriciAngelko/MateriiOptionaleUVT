{
    "version": 2,
    "buildCommand": "npm run build",
    "outputDirectory": "build",
    "functions": {
      "server/server.js": {
        "runtime": "nodejs22.x"
      }
    },
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/server/server.js"
      },
      {
        "source": "/(.*)",
        "destination": "/index.html"
      }
    ]
  }